<!DOCTYPE html>
<html lang="en">
<head>
    <title>FOXDEN DOI repository</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" type="image/x-icon" href="{{.Base}}/images/favicon.ico">
    <!-- https://imperavi.com/superkube/ -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/superkube@latest/dist/superkube.min.css">
    <link rel="stylesheet" href="{{.Base}}/css/top.css">

</head>
<body>
<header id="header">
    <div class="grid">
        <div class="column column-4">
        </div>
        <div class="column column-4">
            <div class="huge">
                FOXDEN DOI repository
            </div>
        </div>
        <div class="column column-4">
        </div>
    </div>

</header>

<section>
    <article id="article">

        <br/>
<form action="{{.Base}}/search" method="post" name="search" id="search" class="form">
<div class="grid">
    <div class="column column-2">
    </div>
    <div class="column column-6">
        <input class="input"
               type="text"
               id="query"
               placeholder="DOI search">
    </div>
    <div class="column column-2">
        <button class="button button-primary">Search</button>
    </div>
    <div class="column column-2">
    </div>
</div>

</form>

    </article>
</section>

<footer id="footer">
    <div class="grid">
        <div class="column column-2">
        </div>
        <div class="column column-1">
            <img src="{{.Base}}/images/cornell_logo.png" alt="NSF" style="width:60px;padding-top:20px;">
        </div>
        <div class="column column-6">
            <br/>
            <a href="https://www.chess.cornell.edu/" class="button button-small">
                CHESS
            </a>
            &nbsp; | &nbsp;
            <a href="https://www.chess.cornell.edu/facilities" class="button button-small">
                Beamlines
            </a>
            &nbsp; | &nbsp;
            <a href="https://www.chess.cornell.edu/about/publications" class="button button-small">
                Publications
            </a>
        </div>
        <div class="column column-1">
            <img src="{{.Base}}/images/nsf_logo.png" alt="NSF" style="width:60px;padding-top:20px;">
        </div>
        <div class="column column-2">
        </div>
    </div>
</footer>

</body>
</html>
